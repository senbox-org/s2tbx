    <description>
        The gdal addo tool - builds or rebuilds overview images.
    </description>


    <mainToolFileLocation>C:/Program Files/GDAL/gdaladdo.exe</mainToolFileLocation>

    <workingDir>D:/Sentinel2_PROJECT/tmp</workingDir>

    <templateFileLocation>gdaladdo-cmdLineTemplate.tpl</templateFileLocation>

    <parameters>
        <parameter>
            <!-- The name of the parameter; by this name the specified value can be retrieved in the python implementation -->
